class Bip39 {
  public static generateMnemonic() {
    const mnemonic = generateMnemonic();
    return mnemonic;
  }
  public static mnemonicToSeedSync(mnemonic: string) {
    const seed = mnemonicToSeedSync(mnemonic);
    return seed;
  }
}
